<SADE_project xmlns="http://sade">
    <!-- BASICS -->
    <name>Das ist ein Testprojekt</name>
    <data path="/db/sade/projects/default/data"/>
    <scripts path="/db/sade/projects/default/scripts"/>
    <template path="/db/sade/templates/default/index.xml"/>
    <properties>
        <property key="template.dir">/db/sade/templates/default/</property>
        <property id="p1" type="pagination" col="/db/projects/default/data/texts" xpath="//pb"/>
        <property id="p2" type="pagination" col="/db/projects/default/data/register" xpath="//p"/>
        <logo img_url="/default/images/logo.png"/>
        <background img_url="/default/images/bg.png"/>
        <title>
            <h1>Scalable Architecture for Digital Editions</h1>
        </title>
    </properties>

    <!-- MODULES -->
    <modules path="/db/sade/modules">
        <module ns="http://sade/index" name="index" position="left"/>
        <module ns="http://sade/search" name="search" position="detail"/>
        <module ns="http://sade/viewer" name="viewer" position="content">
            <defaultview path="/sade/projects/default/defaultview.xml"/>
        </module>
