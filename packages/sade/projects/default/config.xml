<SADE_project xmlns="http://sade">
    <!-- BASICS -->
    <properties>
        <!-- you could change the default template by changing the property
        template.dir to /db/sade/templates/bootstrap/ , then save and reload
        mainpage -->
        <property key="template.dir">/db/sade/templates/default/</property>
    </properties>

    <!-- MODULES -->
    <modules path="/db/sade/modules">
        <module ns="http://sade/index" name="index" position="left"/>
        <module ns="http://sade/search" name="search" position="right"/>
        <module ns="http://sade/viewer" name="viewer" position="content">
            <defaultview path="/sade/projects/default/defaultview.xml"/>
        </module>
    </modules>
</SADE_project>
